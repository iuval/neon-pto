= form_for @report do |f|
  - if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control', placeholder: 'How was your day?'
  .form-group
    = f.label :body
    = f.text_area :body, class: 'form-control counted', placeholder: 'Type in your adventure!', rows: 10
    %h6.pull-right{id: 'counter', data: { default: Report.max_chars }}
      = "#{Report.max_chars} characters remaining"
  .form-group
    = f.label :date
    = f.date_select :date, value: Date.today.strftime('%m-%d-%Y')
  .row
    .form-group
      = f.label :pictures
      .btn-group{"data-toggle" => "buttons"}
        -  @pictures.each do |p|
          .col-xs-12.col-md-6
            %label.btn.btn-default
              %input{ type: :checkbox, name: 'report[picture_ids][]', value: p.id }
              .thumbnail
                = image_tag p.file, { data: { src: 'holder.js/100%x180' } }
  .actions
    = f.submit 'Save'
