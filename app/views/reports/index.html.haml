.form-group.row
  .col-xs-8
    %label.control-label.h1= 'Reports from'
    #datepicker.input-group.date{"data-date" => @date, "data-date-format" => "mm-yyyy", data: { on_change_url: reports_path }}
      %input.form-control{readonly: "readonly", type: "text", value: @date}/
      %span.input-group-addon.add-on
        %i.glyphicon.glyphicon-calendar
.reports
  - if @reports && @reports.count > 0
    - @reports.each do |report|
      %ul.list-group
        %li.list-group-item
          .row
            .col-xs-2.col-md-2
              = image_tag avatar_url(report.user, {size: 80}), class: 'img-circle'
            .col-xs-10.col-md-10
              .report
                = link_to report.title, report, class: 'h1'
                .mic-info
                  = "By: #{report.user.email }"
                  %br
                  = "on #{ report.date }"
                  %br
                  = "with #{report.pictures.count } pictures"
                .action
                  =render partial: 'partials/love_report_button', locals: { report: report, is_current_month: @is_current_month }
  - else
    No reports
