%h1= 'Reports from'
.col-xs-12
  .form-group
    #datepicker.input-group.date{"data-date" => @date, "data-date-format" => "mm-yyyy", data: { on_change_url: reports_path }}
      %span.input-group-addon.add-on
        %i.glyphicon.glyphicon-calendar
      %input.form-control{readonly: "readonly", type: "text", value: @date}
.reports.col-xs-12
  - if @reports && @reports.count > 0
    - @reports.each do |report|
      %ul.list-group
        %li.list-group-item
          =render partial: 'partials/report_summary', locals: { report: report, is_current_month: @is_current_month }
  - else
    No reports
