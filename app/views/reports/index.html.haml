.page-header
  .h1= 'Reports from'
  #datepicker.date{"data-date" => @date, "data-date-format" => "mm-yyyy", data: { on_change_url: reports_path }}
    %span.add-on.btn.btn-block.btn-default.btn-lg
      %i.glyphicon.glyphicon-calendar
      = @date
.reports
  - if @reports && @reports.count > 0
    - @reports.each do |report|
      %ul.list-group
        %li.list-group-item
          =render partial: 'partials/report_summary', locals: { report: report, can_vote: @can_vote }
    %a.btn.btn-primary.btn-lg.back-to-top{id:"back-to-top", href: "#", role:"button", title:"Click to return on the top page",
      data: { toggle: "tooltip", placement: "left"}}
      %span.glyphicon.glyphicon-chevron-up
  - else
    No reports
