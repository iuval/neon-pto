!!!
%html
  %head
    %title NeonPto
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "", name: "description"}/
    %meta{content: "", name: "author"}/
    %link{href: "../../docs-assets/ico/favicon.png", rel: "shortcut icon"}/
    %title Neon PTO
  %body
    / Fixed navbar
    %nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          = image_tag avatar_url(current_user)
          =current_user.email
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to 'All reports', reports_path
            %li
              = link_to 'Reports poll', result_reports_path
            %li
              - if current_user.has_this_month_report?
                = link_to 'Want to change your report?', edit_reports_path
              - else
                = link_to 'Write a report!', new_report_path
            %li
              = link_to 'Upload a picture', new_picture_path
            %li
              %a{href: "#about"} About
            %li
              = link_to "Log out", signout_path, method: :delete
        / /.nav-collapse
    .container
      .row
        #messages
          - flash.each do |key, value|
            %div{class: flash_class(key)}
              = value
      .row
        .col-md-6.col-md-offset-3
          = yield
