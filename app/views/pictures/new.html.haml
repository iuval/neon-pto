.col-md-12.upload-picture
  = form_for @picture do |f|
    .form-group.picture-group
      = f.label :file
      = f.file_field :file, class: 'file', style: 'display: none;'
      #browse-file.btn.btn-default.drop_zone.form-control.preview.thumbnail
        %span Browse or Drag file here
      #drag-overlay.dragleave
        %span
          Drop file here
          %span.glyphicon.glyphicon-upload
    .form-group
      = f.label :description
      = f.text_field :description, placeholder: "In few words, describe what's happening", class: 'form-control'
    .actions
      = link_to 'Upload', pictures_path, class: 'btn btn-success btn-large submit', data: { loading_text: 'Uploading...' }
